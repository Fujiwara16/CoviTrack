<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Details">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/prim"
        app:cardCornerRadius="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stateDet">

        <RelativeLayout
            android:layout_width="402dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/totalPop"
                android:layout_width="208dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:layout_marginBottom="300dp"
                android:text="Total population"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/population"
                android:layout_width="159dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-37dp"
                android:layout_marginLeft="-37dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="300dp"
                android:layout_toEndOf="@+id/deceased"
                android:layout_toRightOf="@+id/deceased"
                android:hint="18312"
                android:textColor="@color/teal_700"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/totalTest"
                android:layout_width="208dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="144dp"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:layout_marginBottom="180dp"
                android:text="Total people tested"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tested"
                android:layout_width="159dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-36dp"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="148dp"
                android:layout_marginBottom="180dp"
                android:layout_toEndOf="@+id/deceased"
                android:layout_toRightOf="@+id/deceased"
                android:hint="18312"
                android:textColor="@color/teal_700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vacc"
                android:layout_width="362dp"
                android:layout_height="31dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="192dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="130dp"
                android:text="Vaccinated people in the region -"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/first"
                android:layout_width="208dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="232dp"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:layout_marginBottom="90dp"
                android:text="First dosage :-"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dosage1"
                android:layout_width="159dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-37dp"
                android:layout_marginLeft="-37dp"
                android:layout_marginTop="234dp"
                android:layout_marginBottom="90dp"
                android:layout_toEndOf="@+id/deceased"
                android:layout_toRightOf="@+id/deceased"
                android:hint="18312"
                android:textColor="@color/teal_700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/second"
                android:layout_width="208dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="271dp"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:layout_marginBottom="50dp"
                android:text="Second dosage :-"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dosage2"
                android:layout_width="159dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-36dp"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="273dp"
                android:layout_marginBottom="50dp"
                android:layout_toEndOf="@+id/deceased"
                android:layout_toRightOf="@+id/deceased"
                android:hint="18312"
                android:textColor="@color/teal_700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cases"
                android:layout_width="134dp"
                android:layout_height="33dp"
                android:layout_alignTop="@+id/totalPop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="250dp"
                android:text="Cases confirmed"
                android:textColor="@color/purple_500" />


            <TextView
                android:id="@+id/confirmedCases"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignTop="@+id/totalPop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="87dp"
                android:layout_marginBottom="220dp"
                android:hint="18312"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/deceased"
                android:layout_width="102dp"
                android:layout_height="34dp"
                android:layout_alignTop="@+id/totalPop"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="250dp"
                android:layout_toRightOf="@id/cases"
                android:text="Deceased"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/confirmedDeaths"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignTop="@+id/totalPop"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="220dp"
                android:layout_toEndOf="@+id/cases"
                android:layout_toRightOf="@+id/cases"
                android:hint="18312"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/recovered"
                android:layout_width="121dp"
                android:layout_height="33dp"
                android:layout_alignTop="@+id/totalPop"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="250dp"
                android:layout_toRightOf="@id/deceased"
                android:text="Recovered"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/recoveredCases"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/totalPop"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="88dp"
                android:layout_marginBottom="220dp"
                android:layout_toEndOf="@+id/deceased"
                android:layout_toRightOf="@+id/deceased"
                android:hint="18312"
                android:textColor="@color/green" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/stateDet"
        android:layout_width="378dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shapetext"
        android:padding="10dp"
        android:text="Maharashtra"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/dls"
        android:layout_width="409dp"
        android:layout_height="261dp"
        android:layout_marginBottom="4dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>